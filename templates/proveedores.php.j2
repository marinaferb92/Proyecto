$sql = "
    SELECT proveedor_id, nombre, telefono, correo, direccion
    FROM Proveedores
    WHERE 1=1
";

$params = [];

if ($busca !== '') {
    $sql .= " AND (nombre LIKE :q OR telefono LIKE :q OR correo LIKE :q)";
    $params[':q'] = "%$busca%";
}

$sql .= " ORDER BY nombre ASC";

$stmt = $pdo->prepare($sql);
$stmt->execute($params);
$proveedores = $stmt->fetchAll();
