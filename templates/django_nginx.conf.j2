server {
    listen 80;
    server_name {{ certbot.domain | default('_') }};

    location /static/ {
        alias /var/www/clinica_app/static/;
    }

    location /media/ {
        alias /var/www/clinica_media/;
    }

    location / {
        proxy_pass http://unix:/var/www/clinica_app/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
