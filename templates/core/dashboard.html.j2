{% extends "core/base.html" %}
{% block content %}
<h1>Panel de control</h1>

<h3>Próximas citas</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Fecha</th>
        <th>Hora</th>
        <th>Paciente</th>
        <th>Médico</th>
        <th>Estado</th>
    </tr>
    </thead>
    <tbody>
    {% for c in upcoming_appointments %}
        <tr>
            <td>{{ c.date }}</td>
            <td>{{ c.time }}</td>
            <td>{{ c.patient }}</td>
            <td>{{ c.doctor }}</td>
            <td>{{ c.get_status_display }}</td>
        </tr>
    {% empty %}
        <tr><td colspan="5">No hay citas próximas.</td></tr>
    {% endfor %}
    </tbody>
</table>

<h3>Stock bajo mínimo</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Producto</th>
        <th>SKU</th>
        <th>Cantidad</th>
        <th>Mínimo</th>
    </tr>
    </thead>
    <tbody>
    {% for s in low_stock %}
        <tr>
            <td>{{ s.name }}</td>
            <td>{{ s.sku }}</td>
            <td>{{ s.quantity }}</td>
            <td>{{ s.min_quantity }}</td>
        </tr>
    {% empty %}
        <tr><td colspan="4">No hay alertas de stock.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
