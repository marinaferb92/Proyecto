{% extends "core/base.html" %}
{% block content %}
<h1>Pacientes</h1>
<a href="{% url 'core:patient_create' %}" class="btn btn-success mb-3">Nuevo paciente</a>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>DNI</th>
        <th>Tel√©fono</th>
        <th>Email</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for p in patients %}
        <tr>
            <td>{{ p.first_name }}</td>
            <td>{{ p.last_name }}</td>
            <td>{{ p.dni }}</td>
            <td>{{ p.phone }}</td>
            <td>{{ p.email }}</td>
            <td>
                <a href="{% url 'core:patient_update' p.pk %}" class="btn btn-sm btn-primary">Editar</a>
            </td>
        </tr>
    {% empty %}
        <tr><td colspan="6">No hay pacientes.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
