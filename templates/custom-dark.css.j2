/* ============================
   MODO OSCURO - Clínica Estética
   ============================ */

body.dark-mode {
    background-color: #1a1a1d;
    color: #fce4ec;
}

/* NAVBAR */
.dark-mode .navbar {
    background-color: #ad1457 !important; /* rosa oscuro elegante */
}

/* Enlaces */
.dark-mode a {
    color: #ff80ab;
}
.dark-mode a:hover {
    color: #ffb2d6;
}

/* Cards */
.dark-mode .card {
    background-color: #2a2a2e;
    color: #fce4ec;
    border: none;
    box-shadow: 0 4px 12px rgba(255, 64, 129, 0.15);
}

.dark-mode .card-header {
    background-color: #2a2a2e;
    border-bottom: 1px solid #ad1457;
}

/* Tablas */
.dark-mode table {
    color: #ffe6f2;
}
.dark-mode .table tbody tr:hover {
    background-color: #3a3a40 !important;
}
.dark-mode thead {
    background-color: #4a4a50 !important;
}

/* Formularios */
.dark-mode .form-control {
    background-color: #2a2a2e;
    color: #fce4ec;
    border-color: #ad1457;
}
.dark-mode .form-control:focus {
    border-color: #ff80ab;
    box-shadow: 0 0 0 0.2rem rgba(255, 64, 129, 0.25);
}

/* Botones */
.dark-mode .btn-primary {
    background-color: #d81b60;
    border-color: #d81b60;
}
.dark-mode .btn-primary:hover {
    background-color: #c2185b;
    border-color: #c2185b;
}

/* Autocomplete */
.dark-mode .autocomplete-results {
    background-color: #2a2a2e;
    border-color: #ad1457;
}
.dark-mode .autocomplete-item:hover {
    background-color: #3a3a40;
}

/* Badges */
.dark-mode .badge.bg-danger {
    background-color: #e53935 !important;
}
.dark-mode .badge.bg-success {
    background-color: #43a047 !important;
}
