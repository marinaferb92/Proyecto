body.dark-mode {
    background-color: #1f1b20;
    color: #e8dee6;
}

/* Navbar */
.dark-mode .navbar {
    background-color: #5e2b4f !important;
}
.dark-mode .nav-link {
    color: #f7e3ef !important;
}
.dark-mode .nav-link:hover {
    color: #ffb6d6 !important;
}

/* Cards */
.dark-mode .card {
    background-color: #2b262d;
    border-color: #3b343c;
    color: #e8dee6;
}

/* Card header */
.dark-mode .card-header {
    background-color: #3b303a;
    border-bottom: 1px solid #4a414a;
}

/* Tablas */
.dark-mode table {
    background-color: #2b262d;
    color: #e8dee6;
}
.dark-mode thead {
    background-color: #3b303a !important;
}
.dark-mode .table tbody tr:hover {
    background-color: #4d404b !important;
}

/* Forms */
.dark-mode .form-control {
    background-color: #2e2a30;
    color: #f0e8ef;
    border-color: #7c6270;
}
.dark-mode .form-control:focus {
    border-color: #d47ea7;
    box-shadow: 0 0 0 0.25rem rgba(212, 126, 167, 0.25);
}

/* Buttons */
.dark-mode .btn-primary {
    background-color: #c6578a;
    border-color: #c6578a;
}
.dark-mode .btn-primary:hover {
    background-color: #b04b79;
}

/* Autocomplete */
.dark-mode .autocomplete-results {
    background-color: #2b262d;
    border-color: #604654;
}
.dark-mode .autocomplete-item:hover {
    background-color: #4d404b;
}
