/* ========================================
   DARK MODE ROSA / GRIS ELEGANTE
======================================== */

body.dark-mode {
    background-color: #2b2b30;
    color: #ececec;
}

/* Navbar */
.dark-mode .navbar {
    background-color: #a94f6d !important;
}

/* Cards */
.dark-mode .card {
    background-color: #3a3a42;
    border-color: #555;
    color: #eee;
}

/* Card headers */
.dark-mode .card-header {
    background-color: #4a4a52;
    border-bottom: 1px solid #666;
}

/* Tablas */
.dark-mode table {
    color: #eee;
}
.dark-mode .table tbody tr:hover {
    background-color: #4a3f46 !important;
}
.dark-mode thead {
    background-color: #5a4a52 !important;
}

/* Formularios */
.dark-mode .form-control {
    background-color: #4a4a4f;
    color: #fff;
    border-color: #777;
}
.dark-mode .form-control:focus {
    border-color: #c27d9c;
    box-shadow: 0 0 0 0.2rem rgba(194, 125, 156, 0.25);
}

/* Botones */
.dark-mode .btn-primary {
    background-color: #b85f7e;
    border-color: #b85f7e;
}
.dark-mode .btn-primary:hover {
    background-color: #a94f6d;
}

/* Autocomplete */
.dark-mode .autocomplete-results {
    background-color: #3a3a42;
    border-color: #666;
}
.dark-mode .autocomplete-item:hover {
    background-color: #54414a;
}
