/* ============================
   MODO OSCURO PASTEL SUAVE
   ============================ */

body.dark-mode {
    background-color: #f4e9ef; /* rosita pastel muy suave */
    color: #5a4a4f;
}

/* Navbar */
.dark-mode .navbar {
    background-color: #d46a8c !important;
    color: white;
}

/* Cards */
.dark-mode .card {
    background-color: #f7edf2;
    border-color: #e0c7d3;
    color: #5a4a4f;
}

/* Headers */
.dark-mode .card-header {
    background-color: #f0e3e9;
    border-bottom: 1px solid #e3c5d4;
}

/* Tablas */
.dark-mode table {
    color: #5a4a4f;
    background-color: #f6ecf1;
}
.dark-mode .table tbody tr:hover {
    background-color: #ebd7df !important;
}
.dark-mode thead {
    background-color: #ead3dc !important;
}

/* Formularios */
.dark-mode .form-control {
    background-color: #f3e4eb;
    color: #5a4a4f;
    border-color: #d9b8c7;
}
.dark-mode .form-control:focus {
    border-color: #c27d9c;
    box-shadow: 0 0 0 0.2rem rgba(194, 125, 156, 0.25);
}

/* Botones */
.dark-mode .btn-primary {
    background-color: #d46a8c;
    border-color: #d46a8c;
}
.dark-mode .btn-primary:hover {
    background-color: #c55b80;
    border-color: #c55b80;
}

/* Autocomplete */
.dark-mode .autocomplete-results {
    background-color: #f6ecf1;
    border-color: #d9b8c7;
}
.dark-mode .autocomplete-item:hover {
    background-color: #ead3dc;
}
