/* ================================
   PALETA PASTEL SUAVE — CLÍNICA ESTÉTICA
================================ */

:root {
    --rosa-suave: #f7b2c4;
    --rosa-clarito: #fdd6e2;
    --rosa-medio: #e59bbd;
    --rosa-medio-hover: #d889ac;
    --rosa-borde: #f4c8d7;

    --texto-oscuro: #4a4445;
    --fondo-claro: #fdf8fa;

    --card-shadow: rgba(0, 0, 0, 0.06);
}

/* ================================
   BODY
================================ */

body {
    background-color: var(--fondo-claro);
    font-family: 'Inter', sans-serif;
    color: var(--texto-oscuro);
}

/* ================================
   NAVBAR PASTEL
================================ */

.navbar {
    background-color: var(--rosa-suave) !important;
    box-shadow: 0 2px 6px rgba(247, 178, 196, 0.35);
}

.navbar-brand,
.nav-link {
    color: #fff !important;
    font-weight: 600;
}

.nav-link.active {
    background-color: var(--rosa-clarito) !important;
    color: #7a5967 !important;
    border-radius: 6px;
}

/* ================================
   BOTÓN HAMBURGUESA
================================ */

.navbar-toggler {
    border: 2px solid #ffffff88 !important;
    border-radius: 10px;
}

/* ================================
   CARDS PASTEL
================================ */

.card {
    background: #fff;
    border-radius: 1rem;
    border: 1px solid var(--rosa-borde);
    box-shadow: 0 4px 12px var(--card-shadow);
}

.card-header {
    background: #fff;
    border-bottom: 2px solid var(--rosa-borde);
}

/* ================================
   TABLAS PASTEL
================================ */

.table thead {
    background-color: var(--rosa-clarito);
    color: #503844;
}

.table-hover tbody tr:hover {
    background-color: #fde9f1 !important;
}

/* ================================
   FORMULARIOS
================================ */

.form-control {
    border-radius: 10px;
    border-color: var(--rosa-borde);
}

.form-control:focus {
    border-color: var(--rosa-suave);
    box-shadow: 0 0 0 .20rem rgba(247,178,196,.45);
}

/* ================================
   BOTONES PASTEL
================================ */

.btn-primary {
    background-color: var(--rosa-medio);
    border-color: var(--rosa-medio);
}

.btn-primary:hover {
    background-color: var(--rosa-medio-hover);
    border-color: var(--rosa-medio-hover);
}

.btn-outline-primary {
    border-color: var(--rosa-medio);
    color: var(--rosa-medio);
}

.btn-outline-primary:hover {
    background-color: var(--rosa-medio);
    color: #fff;
}

/* ================================
   BADGES
================================ */

.badge.bg-success { background-color: #7bc47f !important; }
.badge.bg-danger { background-color: #ff7b96 !important; }
.badge.bg-warning { background-color: #f8bb5c !important; color: #fff; }

/* ================================
   AUTOCOMPLETE
================================ */

.autocomplete-results {
    background: #fff;
    border: 1px solid var(--rosa-borde);
    border-radius: 10px;
    box-shadow: 0 6px 12px rgba(0,0,0,.1);
}

.autocomplete-item:hover {
    background-color: #fdeaf2;
}

/* ================================
   MODO OSCURO — animación suave
================================ */

body,
.navbar,
.card,
.table,
.form-control,
footer {
    transition:
        background-color .3s ease,
        color .3s ease,
        border-color .3s ease,
        box-shadow .3s ease;
}
