body {
    background-color: #f7eef2;
    color: #4b3f45;
    font-family: "Inter", sans-serif;
}

/* Navbar */
.navbar {
    background-color: #d46a8c !important;
    border-bottom: 2px solid #c95f82;
}
.navbar .nav-link {
    color: white !important;
}
.navbar .nav-link:hover {
    opacity: 0.85;
}

/* KPI Cards */
.kpi-card {
    border-radius: 14px;
    background-color: #ffffff;
}
.kpi-icon {
    font-size: 30px;
    opacity: 0.75;
}

/* Cards generales */
.card {
    border-radius: 14px;
}

/* Tablas */
.table > thead {
    background-color: #f1dee5;
}
.table tbody tr:hover {
    background-color: #f3e8ec !important;
}

/* Formularios */
.form-control {
    border-radius: 10px;
    border-color: #d3b8c3;
}
.form-control:focus {
    border-color: #d46a8c;
    box-shadow: 0 0 0 0.2rem rgba(212, 106, 140, 0.25);
}

/* Bot√≥n primario */
.btn-primary {
    background-color: #d46a8c;
    border-color: #d46a8c;
}
.btn-primary:hover {
    background-color: #c95f82;
    border-color: #c95f82;
}

/* Autocomplete */
.autocomplete-results {
    position: absolute;
    z-index: 999;
    background: white;
    width: 100%;
    max-height: 250px;
    overflow-y: auto;
    border: 1px solid #d3b8c3;
    border-radius: 8px;
}
.autocomplete-item:hover {
    background-color: #f1dee5;
}
