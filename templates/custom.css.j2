body {
    background-color: #faf4f7;
    color: #4e3f46;
    font-family: "Inter", sans-serif;
}

/* Navbar */
.navbar {
    background-color: #d97a9a !important;
    color: white;
}

.nav-link {
    color: white !important;
    font-weight: 500;
}
.nav-link:hover {
    color: #ffe2ef !important;
}

/* Cards */
.card {
    background-color: #ffffff;
    border-radius: 10px;
    border: 1px solid #f1d8e3;
    box-shadow: 0px 2px 6px rgba(150, 105, 125, 0.08);
}

/* Card header */
.card-header {
    background-color: #f9ecf1;
    border-bottom: 1px solid #eed2df;
    font-weight: 600;
    font-size: 15px;
}

/* Buttons */
.btn-primary {
    background-color: #d46a8c;
    border-color: #d46a8c;
}
.btn-primary:hover {
    background-color: #c55b80;
    border-color: #c55b80;
}

.btn-outline-primary {
    color: #d46a8c;
    border-color: #d46a8c;
}
.btn-outline-primary:hover {
    background-color: #d46a8c;
    color: white;
}

/* Inputs */
.form-control {
    border-radius: 7px;
    border: 1px solid #e3c1cf;
}
.form-control:focus {
    border-color: #c36a8d;
    box-shadow: 0 0 0 0.25rem rgba(195, 106, 141, 0.25);
}

/* Tablas */
table {
    background-color: white;
}
thead {
    background-color: #f3dde7;
    color: #4e3f46;
    font-weight: 600;
}
.table tbody tr:hover {
    background-color: #f7e5ed;
}

/* Autocomplete */
.autocomplete-results {
    position: absolute;
    z-index: 999;
    background: white;
    width: 100%;
    border: 1px solid #e3c1cf;
    border-radius: 4px;
    max-height: 260px;
    overflow-y: auto;
}

.autocomplete-item {
    padding: 8px 12px;
    cursor: pointer;
}
.autocomplete-item:hover {
    background-color: #f7e5ed;
}

/* Alerts */
.alert {
    border-radius: 10px;
}

/* Footer */
footer {
    padding: 20px 0;
    text-align: center;
    color: #8f7c86;
}
