$sql = "SELECT e.*, c.nombre AS categoria
        FROM Empleados e
        LEFT JOIN CategoriasEmpleados c ON c.categoria_id = e.categoria_id
        WHERE 1=1";

$params = [];

if ($q !== '') {
    $sql .= " AND (e.nombre LIKE :q OR e.apellido LIKE :q OR e.email LIKE :q)";
    $params[':q'] = "%$q%";
}

$sql .= " ORDER BY e.nombre ASC";
$stmt = $pdo->prepare($sql);
$stmt->execute($params);
$empleados = $stmt->fetchAll();
