// Consulta
$sql = "
    SELECT cliente_id, nombre, apellido, dni, telefono, correo, fecha_registro
    FROM Clientes
    WHERE 1=1
";

$params = [];

if ($q !== '') {
    $sql .= " AND (
        nombre   LIKE :q OR
        apellido LIKE :q OR
        dni      LIKE :q OR
        telefono LIKE :q OR
        correo   LIKE :q
    )";
    $params[':q'] = "%$q%";
}

$sql .= " ORDER BY apellido, nombre";

$stmt = $pdo->prepare($sql);
$stmt->execute($params);
$clientes = $stmt->fetchAll();
