/* ==== Tarjetas KPI ==== */
.card-kpi {
    border: none;
    border-radius: 14px;
    padding: 22px;
    background: #fff;
    box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    transition: transform .2s ease;
}

.card-kpi:hover {
    transform: translateY(-4px);
}

.card-kpi .icon {
    font-size: 32px;
    opacity: .8;
}

/* ==== Contenedor de gráfica ==== */
.chart-card {
    border-radius: 14px;
    background: #fff;
    padding: 20px;
    box-shadow: 0 4px 14px rgba(0,0,0,0.06);
}

.chart-box {
    height: 350px;
}

/* ==== Títulos de sección ==== */
.section-title {
    font-weight: 600;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 8px;
}
