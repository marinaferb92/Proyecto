{% extends "public/base_public.html" %}
{% block content %}

<h2 class="mb-4">Reservar una Cita</h2>

<form method="POST" class="card p-4 shadow-sm">
    {% csrf_token %}

    <label class="form-label">Nombre</label>
    <input type="text" name="nombre" class="form-control" required>

    <label class="form-label mt-3">Tel√©fono</label>
    <input type="text" name="telefono" class="form-control" required>

    <label class="form-label mt-3">Tratamiento Deseado</label>
    <select name="tratamiento_id" class="form-control" required>
        {% for t in tratamientos %}
            <option value="{{ t.tratamiento_id }}">{{ t.nombre }}</option>
        {% endfor %}
    </select>

    <label class="form-label mt-3">Fecha</label>
    <input type="date" name="fecha" class="form-control" required>

    <label class="form-label mt-3">Hora</label>
    <input type="time" name="hora" class="form-control" required>

    <button class="btn btn-primary mt-4">Confirmar Cita</button>
</form>

{% endblock %}
