$q            = trim($_GET['q'] ?? '');
$fecha_desde  = $_GET['fecha_desde'] ?? '';
$fecha_hasta  = $_GET['fecha_hasta'] ?? '';
$estado       = $_GET['estado'] ?? '';

// Construir consulta
$sql = "
    SELECT 
        c.*,
        cli.nombre  AS c_nombre,
        cli.apellido AS c_apellido,
        emp.nombre  AS e_nombre,
        emp.apellido AS e_apellido,
        t.nombre    AS t_nombre
    FROM Citas c
    LEFT JOIN Clientes   cli ON cli.cliente_id   = c.cliente_id
    LEFT JOIN Empleados  emp ON emp.empleado_id  = c.empleado_id
    LEFT JOIN Tratamientos t ON t.tratamiento_id = c.tratamiento_id
    WHERE 1=1
";

$params = [];

if ($q !== '') {
    $sql .= " AND (
        cli.nombre LIKE :q
        OR cli.apellido LIKE :q
        OR emp.nombre LIKE :q
        OR emp.apellido LIKE :q
        OR t.nombre LIKE :q
        OR c.notas LIKE :q
    )";
    $params[':q'] = "%$q%";
}

if ($fecha_desde !== '') {
    $sql .= " AND c.fecha >= :fdesde";
    $params[':fdesde'] = $fecha_desde;
}

if ($fecha_hasta !== '') {
    $sql .= " AND c.fecha <= :fhasta";
    $params[':fhasta'] = $fecha_hasta;
}

if ($estado !== '') {
    $sql .= " AND c.estado = :estado";
    $params[':estado'] = $estado;
}

$sql .= " ORDER BY c.fecha DESC, c.hora DESC";

$stmt = $pdo->prepare($sql);
$stmt->execute($params);
$citas = $stmt->fetchAll();
