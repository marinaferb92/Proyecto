$fecha_desde = $_GET['desde'] ?? '';
$fecha_hasta = $_GET['hasta'] ?? '';
$empleado_id = isset($_GET['empleado_id']) ? (int)$_GET['empleado_id'] : 0;

$sql = "SELECT l.log_id, l.accion, l.fecha,
               e.empleado_id, e.nombre, e.apellido
        FROM LogsActividad l
        LEFT JOIN Empleados e ON e.empleado_id = l.empleado_id
        WHERE 1=1";
$params = [];

if ($fecha_desde !== '') {
    $sql .= " AND l.fecha >= :desde";
    $params[':desde'] = $fecha_desde . ' 00:00:00';
}
if ($fecha_hasta !== '') {
    $sql .= " AND l.fecha <= :hasta";
    $params[':hasta'] = $fecha_hasta . ' 23:59:59';
}
if ($empleado_id > 0) {
    $sql .= " AND l.empleado_id = :emp";
    $params[':emp'] = $empleado_id;
}

$sql .= " ORDER BY l.fecha DESC LIMIT 500";

$stmt = $pdo->prepare($sql);
$stmt->execute($params);
$logs = $stmt->fetchAll();

$empleados = $pdo->query("SELECT empleado_id, nombre, apellido FROM Empleados ORDER BY apellido, nombre")->fetchAll();
