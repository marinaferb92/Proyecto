<?php

class MySQLSessionHandler implements SessionHandlerInterface
{
    private $pdo;

    public function open($savePath, $sessionName)
    {
        try {
            $this->pdo = new PDO(
                "mysql:host={{ ip.backend1 }};dbname={{ db.name }};charset=utf8mb4",
                "{{ db.user }}",
                "{{ db.password }}",
                [
                    PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
                    PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
                ]
            );
            return true;
        } catch (PDOException $e) {
            error_log("Session DB connection failed: " . $e->getMessage());
            return false;
        }
    }

    public function close()
    {
        $this->pdo = null;
        return true;
    }

    public function read($id)
    {
        $stmt = $this->pdo->prepare("SELECT data FROM php_sessions WHERE id = ?");
        $stmt->execute([$id]);
        $data = $stmt->fetchColumn();
        return $data ?: '';
    }

    public function write($id, $data)
    {
        $timestamp = time();
        $stmt = $this->pdo->prepare("
            REPLACE INTO php_sessions (id, data, timestamp)
            VALUES (?, ?, ?)
        ");
        return $stmt->execute([$id, $data, $timestamp]);
    }

    public function destroy($id)
    {
        $stmt = $this->pdo->prepare("DELETE FROM php_sessions WHERE id = ?");
        return $stmt->execute([$id]);
    }

    public function gc($maxLifetime)
    {
        $old = time() - $maxLifetime;
        $stmt = $this->pdo->prepare("DELETE FROM php_sessions WHERE timestamp < ?");
        return $stmt->execute([$old]);
    }
}
